<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/backborder"
        android:id="@+id/topRelative"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/profileActivity_back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:layout_toRightOf="@+id/profileActivity_back"
            android:layout_marginTop="18dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#191919"/>
    </RelativeLayout>
    <LinearLayout
        android:padding="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">
        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/profileActivity_imageview"
            android:layout_width="125dp"
            android:layout_height="125dp" />
        <TextView
            android:id="@+id/profileActivity_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 입니다"
            android:textStyle="bold"
            android:textColor="#191919"
            android:textSize="20sp"/>

        <RatingBar
            android:id="@+id/profileActivity_ratingbar"
            style="@style/CustomRatingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:isIndicator="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/profileActivity_product"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:background="@drawable/border">
        <TextView
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/white"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#191919"
            android:text="판매자의 다른 상품 보기"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_right_gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/profileActivity_review"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:background="@drawable/border">
        <TextView
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/white"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#191919"
            android:text="거래 후기 보기"/>
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_right_gray"/>

    </LinearLayout>

</LinearLayout>