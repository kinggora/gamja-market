<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/backborder"
        android:id="@+id/topRelative"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/infoActivity_back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/infoActivity_back"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#191919"/>
        <Button
            android:textColor="#767676"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:backgroundTint="#ffffff"
            android:id="@+id/infoActivity_btn_profilemodify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="수정하기" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/topRelative"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/infoActivity_relativeLaout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/infoActivity_imageview"
            android:layout_width="125dp"
            android:layout_height="125dp"/>
        <TextView
            android:id="@+id/infoActivity_textview_nicname"
            android:text="닉네임 입니다"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="20sp"
            android:textSize="20sp"
            android:textColor="#191919"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/infoActivity_relativeLaout2"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/infoActivity_textview_name"
                android:text="이름"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/infoActivity_textview_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="이름"
                android:textSize="16sp"
                android:textColor="#191919"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/infoActivity_textview_name"
                android:id="@+id/infoActivity_textview_email"
                android:text="이메일"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/infoActivity_textview_name"
                android:id="@+id/infoActivity_textview_email2"
                android:text="이메일"
                android:textSize="16sp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/infoActivity_textview_email"
                android:id="@+id/infoActivity_textview_number"
                android:text="전화번호"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/infoActivity_textview_email"
                android:layout_alignParentRight="true"
                android:id="@+id/infoActivity_textview_number2"
                android:text="전화번호"
                android:textSize="16sp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/infoActivity_relativeLaout1"
        android:id="@+id/infoActivity_relativeLaout_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="6dp"
            android:background="@drawable/border"
            android:id="@+id/infoActivity_btn_passwordmodify"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:text="비밀번호 변경"
            android:textColor="#191919"
            android:textSize="16sp"/>
        <Button
            android:layout_marginTop="1dp"
            android:background="@drawable/border"
            android:layout_below="@+id/infoActivity_btn_passwordmodify"
            android:id="@+id/infoActivity_btn_logout"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:text="로그아웃"
            android:textColor="#191919"
            android:textSize="16sp"/>
        <Button
            android:layout_marginTop="1dp"
            android:background="@drawable/border"
            android:layout_below="@+id/infoActivity_btn_logout"
            android:id="@+id/infoActivity_btn_unregister"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="탈퇴하기"
            android:textColor="#c2c2c2"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>
