<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="150dp"
    android:layout_margin="20dp"
    android:background="@drawable/reviewborder">

    <ImageView
        android:id="@+id/reviewitem_imageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="12dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/reviewitem_imageview"
        android:id="@+id/reviewitem_nickname"
        android:text="닉네임 입니다"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#191919"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:id="@+id/reviewitem_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomRatingBarStyle"/>
    <TextView
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/reviewitem_imageview"
        android:id="@+id/reviewitem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:textColor="#191919"
        android:textSize="14sp"/>
</RelativeLayout>