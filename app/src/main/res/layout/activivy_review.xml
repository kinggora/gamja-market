<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/backborder"
        android:id="@+id/topRelative"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/reviewActivity_back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/reviewActivity_back"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래 후기 보기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#191919"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewFragment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:id="@+id/reviewActivity_Imageview"
        android:visibility="visible"
        android:layout_gravity="center"
        android:src="@drawable/nonreview"
        android:layout_width="195dp"
        android:layout_height="195dp"/>
</LinearLayout>