<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경하기기"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#191919"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:background="@drawable/passwordboard"
        android:padding="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="•"
            android:textSize="14dp"
            android:textColor="#191919"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_toRightOf="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="새롭게 설절할 비밀번호를 입력해 주세요"
            android:textSize="14dp"
            android:textColor="#191919"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_below="@+id/textView4"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="•"
            android:textSize="14dp"
            android:textColor="#191919"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="비밀번호는 영문,숫자를 포함하여 최소 8자~16자로 입력해주세요"
            android:textSize="14dp"
            android:textColor="#191919"/>
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="16dp"
        android:textColor="#191919"
        android:textSize="14sp"
        android:text="신규 비밀번호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/modifyborder"
            android:textColor="#c2c2c2"
            android:textSize="14sp"
            android:padding="15dp"
            android:id="@+id/modify_password_new"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="새로 설정할 비밀번호를 입력해 주세요"
            android:inputType="textPassword"
            android:layout_marginBottom="6dp"/>
        <ImageView
            android:visibility="invisible"
            android:background="@drawable/clear_circle"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:id="@+id/password_clear1"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="16dp"
        android:textColor="#191919"
        android:textSize="14sp"
        android:text="신규 비밀번호 확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/modifyborder"
            android:textColor="#c2c2c2"
            android:textSize="14sp"
            android:padding="15dp"
            android:id="@+id/modify_password_new2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="새로 설정한 비밀번호를 한 번 더 입력해 주세요"
            android:inputType="textPassword"/>
        <ImageView
            android:visibility="invisible"
            android:background="@drawable/clear_circle"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:id="@+id/password_clear2"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </RelativeLayout>
    <TextView
        android:visibility="invisible"
        android:id="@+id/modify_password_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신규 비밀번호와 불일치합니다."
        android:textColor="@android:color/holo_red_dark"/>

    <Button
        android:clickable="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/modifybnt"
        android:id="@+id/modify_btn_password"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:text="비밀번호 변경하기"/>

</LinearLayout>